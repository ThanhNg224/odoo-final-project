<odoo>
    <!-- List/Tree View -->
    <!-- Add this enhanced tree view -->
    <record id="view_production_order_tree_enhanced" model="ir.ui.view">
        <field name="name">production.order.tree.enhanced</field>
        <field name="model">production.order</field>
        <field name="groups_id" eval="[(4, ref('garment_authorization.group_production_viewer')), (4, ref('garment_authorization.group_production_approval')), (4, ref('garment_authorization.group_production_management'))]"/>
        <field name="arch" type="xml">
            <tree string="Production Orders" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'done'"
                  decoration-bf="progress_percentage &gt;= 100"
                  class="o_production_tree" create="false">
                <field name="name" string="Order"/>
                <field name="sample_name" string="Sample"/>
                <field name="client" string="Client"/>
                <field name="quantity" string="Total Quantity"/>
                <field name="progress_percentage" widget="progressbar" string="Progress"/>
                <field name="cost_total" widget="monetary" string="Total Cost"/>
                <field name="planned_date" string="Planned"/>
                <field name="state" widget="badge" string="Status"
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'in_progress'" 
                       decoration-success="state == 'done'"/>
                <field name="finance_state" widget="badge" string="Finance Status"
                        decoration-danger="finance_state == 'waiting'"
                        decoration-warning="finance_state == 'partial'" 
                        decoration-success="finance_state == 'paid'"/>
            </tree>
        </field>
    </record>

    <!-- View-only form (rename existing form) -->
    <record id="view_production_order_form" model="ir.ui.view">
        <field name="name">production.order.form.view</field>
        <field name="model">production.order</field>
        <field name="arch" type="xml">
            <form string="Production Order" create="false" delete="false" edit="false">
                <header>
                    <button name="action_open_edit_form" type="object" string="Edit" class="oe_highlight" groups="garment_authorization.group_production_management"/>
                    <button name="set_in_progress" string="Start Production" type="object" 
                            class="oe_highlight" invisible="state != 'draft'" groups="garment_authorization.group_production_approval"/>
                    <button name="action_mark_fully_paid" string="Mark Paid" 
                            type="object" class="btn-success"
                            invisible="finance_state == 'paid'" groups="garment_authorization.group_production_approval"/>
                    <button name="action_export_pdf" type="object" class="btn-primary" string="Export PDF" data-hotkey="p" groups="garment_authorization.group_production_viewer"/>
                    <button name="action_refresh_quantity" string="Refresh Quantities" 
                            type="object" class="btn-warning" 
                            title="Manually refresh quantity calculations" groups="garment_authorization.group_production_viewer,garment_authorization.group_production_approval,garment_authorization.group_production_management"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <!-- Main Information -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lines" type="object" class="oe_stat_button" icon="fa-list" groups="garment_authorization.group_production_approval">
                            <field name="line_count" widget="statinfo" string="Lines"/>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="sample_name" readonly="1"/>
                        </h2>
                    </div>
                    
                    <!-- Order Section -->
                    <group>
                        <group name="order_info" string="Order Information">
                            <field name="garment_order_id" readonly="1"/>
                            <field name="order_name" readonly="1"/>
                            <field name="order_number" readonly="1"/>
                            <field name="client" readonly="1"/>
                            <field name="delivery_date" readonly="1"/>
                            <field name="planned_date" readonly="1"/>
                            <field name="quantity" string="Total Quantity" readonly="1"/>
                        </group>

                        <group name="sample_info" string="Sample Information">
                            <field name="sample_id" readonly="1"/>
                            <field name="sample_name" readonly="1"/>
                            <field name="sample_code" readonly="1"/>
                            <field name="brand" readonly="1"/>
                            <field name="development_date" readonly="1"/>
                            <field name="designer" readonly="1"/>
                        </group>
                    </group>
        
                    <group>
                        <group name="production_info" string="Production Details">
                            <field name="finance_state" widget="badge" readonly="1"/>
                            <field name="cost_total" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Progress Bar -->
                    <div name="progress">
                        <label for="progress_percentage" string="Progress"/>
                        <field name="progress_percentage" widget="progressbar" readonly="1"/>
                    </div>
                    
                    <!-- Tabs for different sections -->
                    <notebook>
                        <!-- Order Lines tab - visible to all users but read-only for viewers -->
                        <page string="Order Lines" name="order_lines">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Instructions:</strong> Order lines show the quantities for each size. Progress is automatically calculated based on completed bundles.</p>
                            </div>
                            
                            <field name="line_ids" readonly="1">
                                <tree decoration-info="progress == 0" decoration-warning="progress &gt; 0 and progress &lt; 100" decoration-success="progress &gt;= 100">
                                    <field name="size" string="Size"/>
                                    <field name="color" string="Color"/>
                                    <field name="planned_qty" string="Planned"/>
                                    <field name="done_qty" string="Done"/>
                                    <field name="progress" string="Progress %" widget="progressbar"/>
                                    <field name="completion_status" string="Status"/>
                                </tree>
                            </field>
                        </page>

                        <!-- Bundles tab - visible to all users but read-only for viewers -->
                        <page string="Bundles">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Instructions:</strong> Bundles are managed per size. Completed bundles affect progress tracking.</p>
                            </div>

                            <field name="line_ids" readonly="1">
                                <tree string="Line Bundles" create="false" delete="false">
                                    <field name="size"/>
                                    <field name="planned_qty" string="Planned"/>
                                    <field name="done_qty" string="Done"/>
                                    <field name="bundle_ids" widget="one2many_list">
                                        <tree decoration-muted="not is_completed" decoration-success="is_completed">
                                            <field name="bundle_no" string="Bundle"/>
                                            <field name="qty" string="Quantity"/>
                                            <field name="is_completed" widget="boolean_toggle" readonly="1"/>
                                        </tree>
                                    </field>
                                </tree>
                            </field>
                        </page>

                        <page string="Material Details" name="materials">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Instructions:</strong> Material details are automatically filled from the sample. Adjust quantities as needed.</p>
                            </div>
                            
                            <!-- Clean up button for view-only form -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <button name="action_clean_material_entries" 
                                            string="Clean Up Empty Material Entries" 
                                            type="object" 
                                            class="btn btn-warning"
                                            style="padding: 8px 16px; font-size: 14px;"
                                            groups="garment_authorization.group_production_approval"/>
                                </div>
                            </div>
                            
                            <field name="material_ids" readonly="1">
                                <tree class="o_list_view_material">
                                    <field name="name" string="Material Name" width="25%"/>
                                    <field name="item_number" string="Item No." width="15%"/>
                                    <field name="specification" string="Specification" width="20%"/>
                                    <field name="unit" string="Unit" width="10%"/>
                                    <field name="quantity" string="Qty" width="10%"/>
                                    <field name="total_usage" string="Usage" width="10%"/>
                                    <field name="unit_price" string="Price" width="10%"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Process Price List" name="processes">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Instructions:</strong> Process prices are used for cost calculation. Adjust as necessary based on the production requirements.</p>
                            </div>
                            
                            <!-- Clean up button for view-only form -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <button name="action_clean_process_entries" 
                                            string="Clean Up Empty Process Entries" 
                                            type="object" 
                                            class="btn btn-warning"
                                            style="padding: 8px 16px; font-size: 14px;"
                                            groups="garment_authorization.group_production_approval"/>
                                </div>
                            </div>
                            
                            <field name="process_ids" readonly="1">
                                <tree class="o_list_view_process">
                                    <field name="sequence" widget="handle" string="#" width="5%"/>
                                    <field name="name" string="Process Name" width="25%"/>
                                    <field name="unit_price" string="Unit Price" width="12%"/>
                                    <field name="multiplier" string="Multiplier" width="12%" class="multiplier-col"/>
                                    <field name="quantity" string="Quantity" width="12%"/>
                                    <field name="total_price" string="Total Price" width="12%"/>
                                    <field name="note" string="Note" width="22%"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Process Requirements" name="process_requirements">
                            <field name="process_requirements" readonly="1"/>
                        </page>
                        
                        <page string="Other Costs" name="other_costs">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Information:</strong> These costs are imported from the sample. They represent additional costs related to production.</p>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <button name="action_remove_other_cost_entries" 
                                            string="Clean Up Empty Other Cost Entries" 
                                            type="object" 
                                            class="btn btn-warning"
                                            style="padding: 8px 16px; font-size: 14px;"
                                            groups="garment_authorization.group_production_approval"/>
                                </div>
                            </div>
                            
                            <field name="cost_ids" domain="[('cost_type', '=', 'other')]" context="{'default_cost_type': 'other'}" options="{'always_reload': true}">
                                <tree editable="bottom">
                                    <field name="note" string="Cost Name"/>
                                    <field name="amount" widget="monetary" sum="Total"/>
                                    <field name="cost_type" invisible="1"/>
                                </tree>
                            </field>
                            
                            <group class="oe_subtotal_footer">
                                <field name="total_other_cost" string="Total Other Cost" class="oe_subtotal_footer_separator" readonly="1" widget="monetary"/>
                            </group>
                        </page>
                        
                        <page string="Costs" name="costs">
                            <div class="alert alert-info mb-3" role="alert">
                                <p><strong>Cost Summary:</strong> This shows the automatically calculated cost totals from different sections.</p>
                            </div>
                            
                            <group class="oe_cost_summary">
                                <group string="Cost Breakdown">
                                    <field name="total_other_cost" string="Total Other Cost" widget="monetary" readonly="1"/>
                                    <field name="total_material_cost" string="Material Cost" widget="monetary" readonly="1"/>
                                    <field name="total_process_cost" string="Process Cost" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                            
                            <group class="oe_subtotal_footer">
                                <field name="cost_total" string="Total Cost" readonly="1" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

